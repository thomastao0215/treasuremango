.container {
  width: 100vw;
  height: 100vh;

  background-size: cover;
}

.add {
  width: 50px;
  height: 50px;
  background-size: cover;
  border-radius: 0;
  border: white;
}
.device {
  width: 600rpx;
  height: 250rpx;
  background: white;
  border-radius: 5px;
  box-shadow: 5px 5px 25px 0px rgba(46, 61, 73, 0.2);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  margin: 30rpx auto;
  
}
.device .left {
  flex: 3;
  padding-left: 30rpx;
  


}
.device .deviceTitle {
  flex: 5;
}
.device .status {
  flex: 3;
  float: right;
}
.mask {
  width:600rpx;
height:250rpx;

  position:absolute;
  border-radius: 5px;
  background-color:#999;
  z-index:9999;


  opacity:0.1;
}

.device image {
  width: 120rpx;
  height: 120rpx;

}
.deviceTitle{
  font-size: 15px;
}
